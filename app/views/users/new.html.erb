<div class="create_form" align= "center">
<h1>Create A New Account</h1>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error")%></h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with(model:@user, local:true, url: users_path) do |f| %>
  <%= f.text_field :name , placeholder: "Name", class: "input_field"%><br>
  <%= f.text_field :email , placeholder: "Email", class: "input_field"%><br>
  <%= f.password_field :password , placeholder: "Password", class: "input_field"%><br>
  <%= f.password_field :password_confirmation , placeholder: "Password Confirmation", class: "input_field"%><br>
  <%= f.submit "Create Account", class:"create_buttom" %>
<% end %>
</div>
